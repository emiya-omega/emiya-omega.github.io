{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "plugins": ["github"],
  "extends": ["eslint:recommended", "prettier", "plugin:github/internal"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "semi": ["error", "never"]
  },
  "ignorePatterns": ["/dist/", "/src/fixtures/", "/src/blank-configurations/"]
}
